{
	"name": "@ips-hosting/pino-sentry-stream",
	"version": "3.0.0",
	"description": "A pino stream to automatically pass errors to Sentry.",
	"license": "MIT",
	"scripts": {
		"build": "tsc --project ./tsconfig.json",
		"tsc:check": "tsc --project ./tsconfig.json --noEmit",
		"start": "node ./dist/index.js",
		"check": "biome check .",
		"test": "pnpm run check && pnpm run tsc:check",
		"prepack": "pnpm run build"
	},
	"files": [
		"dist/**/*.js",
		"dist/**/*.js.map",
		"dist/**/*.d.ts"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"peerDependencies": {
		"@sentry/core": "^7.0.0 || ^8.0.0 || ^9.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@semantic-release/npm": "12.0.2",
		"@sentry/core": "9.41.0",
		"@types/semantic-release": "20.0.6",
		"semantic-release": "24.2.7",
		"typescript": "5.8.3"
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "next",
				"prerelease": true
			}
		],
		"preset": "angular",
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/github",
			"@semantic-release/git"
		]
	},
	"type": "module",
	"packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
	"engines": {
		"node": ">=20"
	}
}
